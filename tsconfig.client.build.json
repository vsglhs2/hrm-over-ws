{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": true,
    /* Aliasing */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "outDir": "dist/client",
    "composite": true
  },
  "include": ["src/**/*", "package.json"],
  "exclude": [
    "node_modules",
    "src/server/**/*",
    "src/lib/environment/server/**/*",
    "src/index.ts"
  ],
  "buildOptions": {
    "incremental": true,
  },
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
  },
}